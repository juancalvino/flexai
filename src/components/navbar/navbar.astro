---
import Container from "@components/container.astro";
import { Picture } from "astro:assets";
import logoFlexai from "../../assets/imagotipoFlexai.svg";
import { Astronav, MenuItems, MenuIcon } from "astro-navbar";

const menuitems = [
  {
    title: "Precios",
    path: "/precios"
  },
  {
    title: "Cobertura",
    path: "/cobertura"
  },
  {
    title: "Nosotros",
    path: "/nosotros"
  },
];
---
<div class="bg-primary">
  <Container>
    <header class="flex flex-col lg:flex-row justify-between items-center pt-5 lg:py-5">
      <Astronav>
        <div class="image-container">
          <a href="/">
            <Picture
              src={logoFlexai}
              alt="FLEX"
              loading="eager"
              class="picture"
            />
          </a>
        </div>
        <div class="block lg:hidden">
          <MenuIcon class="w-10 h-10 text-gray-800" />
        </div>
        <MenuItems class="hidden w-full lg:w-auto lg:mt-2 lg:flex ">
          <ul class="flex flex-col lg:flex-row lg:gap-3">
            {
              menuitems.map((item, index) => (
                <>

                  {(
                    <li>
                      <a
                        href={item.path}
                        class="flex lg:px-5 py-1 text-2xl items-center font-bold text-secondary hover:text-gray-900">
                        <span> {item.title}</span>
                        {item.badge && (
                          <span
                            class="ml-1 px-2 py-0.5 text-lg animate-pulse font-semibold uppercase text-white bg-indigo-600 rounded-full">
                          New
                        </span>
                        )}
                      </a>
                    </li>
                  )}
                </>
              ))
            }
          </ul>
        </MenuItems>
      </Astronav>
    </header>
  </Container>
</div>

<style>
    header {
        background: var(--primary-color);
    }

    .image-container {
        width: 15%;
    }

    .picture {
        width: 100%;
    }

    @media (max-width: 1023px) {
        .image-container {
            width: 30%; /* Ancho para pantallas mayores o iguales a 538px */
            padding-bottom: 10px;
        }
    }

    @media (max-width: 500px) {
        .image-container {
            width: 40%; /* Ancho para pantallas mayores o iguales a 538px */
            padding-bottom: 10px;
        }
    }
</style>