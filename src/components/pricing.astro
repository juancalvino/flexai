---
import Button from "./ui/button.astro";
import { Icon } from "astro-icon/components";

const { plan } = Astro.props;
---

<div class="w-full max-w-sm">
  <div
    class="flex flex-col w-full h-full border-2 border-[#D8DEE9] border-opacity-50 py-6 px-6 rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-300 bg-white">
    <div class="text-center">
      <p
        class="mt-1 text-4xl font-bold text-brand-blue-600 md:text-3xl">
        { plan.category }
      </p>
      <p class="font-medium text-gray-500 mt-2">{ plan.description }</p>

    </div>
    <ul class="grid mt-8 text-center gap-y-4 justify-center flex-grow">
      {
        plan.prices.map((item: any) => (
          <li class="flex items-center justify-center gap-3 text-gray-700">
            <Icon class="text-brand-blue-600 w-6 h-6" name="bx:bx-package" />
            <span class="font-medium">{item['zone']} -->  ${item['price']}</span>
          </li>
        ))
      }
    </ul>
    <div class="flex mt-8">
      <Button
        href={plan.button.link || "#"}
        variant="primary"
        size="lg"
        fullWidth
        class="shadow-md hover:shadow-lg transition-shadow duration-200"
      >
        {plan.button.text || "Contactenos"}
      </Button>
    </div>
  </div>
</div>
