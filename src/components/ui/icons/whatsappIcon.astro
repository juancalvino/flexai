---
import { whatsappLink } from '@utils/whatsapp';
---
<a href={whatsappLink} target="_blank" rel="noopener noreferrer" class="whatsapp-icon no-underline">
  <img src="/assets/whatsApp.svg" alt="WhatsApp" />
</a>
<style>
    .whatsapp-icon {
        position: fixed;
        bottom: 24px;
        right: 20px;
        background-color: #25d366;
        border-radius: 50%;
        width: 60px;
        height: 60px;
        display: flex;
        justify-content: center;
        align-items: center;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
        z-index: 1000;
        transition: all 0.3s ease;
    }

    .whatsapp-icon img {
        width: 35px;
        height: 35px;
    }

    .whatsapp-icon:hover {
        transform: scale(1.1);
        background-color: #1e8e4f;
        box-shadow: 0 6px 12px rgba(0, 0, 0, 0.3);
    }

    /* Mejoras para m칩viles */
    @media (max-width: 768px) {
        .whatsapp-icon {
            bottom: 20px;
            right: 16px;
            width: 56px;
            height: 56px;
        }

        .whatsapp-icon img {
            width: 32px;
            height: 32px;
        }
    }

    /* Para pantallas muy peque침as */
    @media (max-width: 480px) {
        .whatsapp-icon {
            bottom: 16px;
            right: 12px;
            width: 52px;
            height: 52px;
        }

        .whatsapp-icon img {
            width: 30px;
            height: 30px;
        }
    }

    /* Evitar interferencia con contenido en landscape m칩vil */
    @media (max-height: 500px) and (orientation: landscape) {
        .whatsapp-icon {
            bottom: 12px;
            right: 12px;
            width: 48px;
            height: 48px;
        }

        .whatsapp-icon img {
            width: 28px;
            height: 28px;
        }
    }

    /* Mejorar accesibilidad t치ctil */
    @media (hover: none) {
        .whatsapp-icon:active {
            transform: scale(0.95);
        }
    }
</style>
