---
import { SEO } from "astro-seo";
import Footer from "@components/footer.astro";
import Navbar from "@components/navbar/navbar.astro";
import "@fontsource-variable/inter/index.css";
import '@fontsource-variable/bricolage-grotesque';
import WhatsappIcon from "@components/ui/icons/whatsappIcon.astro";
import '../styles/global.css';
import Analytics from '@vercel/analytics/astro';


export interface Props {
  title: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();

const resolvedImageWithDomain = new URL(
  "/assets/logoFlexai.svg",
  Astro.site
).toString();

const { title } = Astro.props;

const makeTitle = title
  ?  `FLEXAI - ${title}`
  : "FLEXAI - Logistica Inteligente";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <SEO
      title={makeTitle}
      description="FlexAI: ¡La solución logística inteligente para tus envíos de Mercado Libre! "
      canonical={canonicalURL}
      openGraph={{
        basic: {
          url: canonicalURL,
          type: "website",
          title: "FLEXAI - Logistica Inteligente",
          image: resolvedImageWithDomain,
        },
        image: {
          alt: "FlexAI logo",
        },
      }}
    />
  </head>
  <body>
    <Navbar />
    <slot />
    <Footer />
    <WhatsappIcon />
    <style is:global>
        @import url('https://fonts.googleapis.com/css2?family=Istok+Web:ital,wght@0,400;0,700;1,400;1,700&display=swap');
      img {
        content-visibility: auto;
      }
    </style>
    <Analytics/>
  </body>
</html>