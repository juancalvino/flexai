---
import { SEO } from "astro-seo";
import Footer from "../components/footer.astro";
import Navbar from "../components/navbar/navbar.astro";
import WhatsappIcon from "../components/ui/icons/whatsappIcon.astro";
import Analytics from '@vercel/analytics/astro';

import "@fontsource-variable/inter/index.css";
import '@fontsource-variable/bricolage-grotesque';
import '../styles/global.css';

import { DEFAULT_SEO, ENV } from '../config/index.ts';
import type { SeoData } from '../types/business';

export interface Props extends Partial<SeoData> {
  title?: string;
  description?: string;
  image?: string;
  type?: 'website' | 'article';
  noIndex?: boolean;
}

const {
  title,
  description = DEFAULT_SEO.description,
  image,
  type = 'website',
  canonical,
  noIndex = false,
  ...props
} = Astro.props;

// Construct full title
const fullTitle = title 
  ? `${title} | ${DEFAULT_SEO.siteName}`
  : DEFAULT_SEO.title;

// Resolve canonical URL
const canonicalURL = canonical || new URL(Astro.url.pathname, Astro.site).toString();

// Resolve image URL
const resolvedImage = image 
  ? new URL(image, Astro.site).toString()
  : new URL("/assets/logoFlexai.png", Astro.site).toString();

// Structured data for SEO
const structuredData = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "FLEXAI",
  "description": DEFAULT_SEO.description,
  "url": ENV.SITE_URL,
  "logo": resolvedImage,
  "contactPoint": {
    "@type": "ContactPoint",
    "telephone": "+54-11-3050-2881",
    "contactType": "customer service",
    "areaServed": "AR",
    "availableLanguage": "Spanish"
  },
  "sameAs": [
    "https://instagram.com/flexai.logistica"
  ]
};
---

<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    {noIndex && <meta name="robots" content="noindex, nofollow" />}
    
    <SEO
      title={fullTitle}
      description={description}
      canonical={canonicalURL}
      openGraph={{
        basic: {
          url: canonicalURL,
          type: type,
          title: fullTitle,
          image: resolvedImage,
        },
        image: {
          alt: "FLEXAI - LogÃ­stica para Mercado Libre",
          width: 1200,
          height: 630,
        },
        optional: {
          description: description,
          siteName: DEFAULT_SEO.siteName,
          locale: "es_AR",
        }
      }}
      twitter={{
        card: "summary_large_image",
        site: "@flexai_logistica",
        title: fullTitle,
        description: description,
        image: resolvedImage,
      }}
    />
    
    <!-- Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />
    
    <!-- Preconnect to external domains -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    
    <!-- DNS prefetch for performance -->
    <link rel="dns-prefetch" href="https://instagram.com" />
    <link rel="dns-prefetch" href="https://wa.me" />
    
    <!-- Theme color for mobile browsers -->
    <meta name="theme-color" content="#FFCF15" />
    <meta name="msapplication-TileColor" content="#FFCF15" />
    
    <!-- PWA manifest -->
    <link rel="manifest" href="/manifest.json" />
  </head>
  
  <body class="min-h-screen flex flex-col">
    <Navbar />
    
    <main class="flex-grow">
      <slot />
    </main>
    
    <Footer />
    <WhatsappIcon />
    
    <!-- Global styles -->
    <style is:global>
      @import url('https://fonts.googleapis.com/css2?family=Istok+Web:ital,wght@0,400;0,700;1,400;1,700&display=swap');
      
      /* Performance optimizations */
      img {
        content-visibility: auto;
      }
      
      /* Improve text rendering */
      body {
        -webkit-font-smoothing: antialiased;
        -moz-osx-font-smoothing: grayscale;
        text-rendering: optimizeLegibility;
      }
      
      /* Focus styles for accessibility */
      :focus-visible {
        outline: 2px solid theme('colors.brand.yellow.500');
        outline-offset: 2px;
        border-radius: 0.25rem;
      }
      
      /* Smooth scrolling */
      html {
        scroll-behavior: smooth;
      }
      
      /* Reduce motion for users who prefer it */
      @media (prefers-reduced-motion: reduce) {
        *,
        ::before,
        ::after {
          animation-duration: 0.01ms !important;
          animation-iteration-count: 1 !important;
          transition-duration: 0.01ms !important;
          scroll-behavior: auto !important;
        }
      }
    </style>
    
    <!-- Analytics -->
    <Analytics />
  </body>
</html>